<% provide :title, t(".title") %>
<section class="my-2 container">
  <h3 class="mb-4 font-weight-bold"><%= t ".title" %></h3>
  <%= form_for @campaign do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="row">
      <div class="col-lg-8 col-md-12">
        <div class="form-group">
          <%= f.label :image, class: "upload-img-input" do %>
            <%= image_tag "svg/kindmate_blank_bg.svg", id: "campaign-image" %>
            <%= image_tag "svg/upload_image.svg", class: "upload-btn" %>
          <% end %>
          <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "d-none" %>
        </div>
      </div>
      <div class="col-lg-4 col-md-4">
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :total_amount %>
          <div class="input-group">
            <%= f.number_field :total_amount, min: 0, step: 1000, class: "form-control" %>
            <div class="input-group-append">
              <span class="input-group-text">VNƒê</span>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :expired_at %>
          <div class="input-group">
            <%= f.text_field :expired_at, id: "campaign_expired_date", class: "form-control" %>
            <div class="input-group-append">
              <span class="input-group-text">
                <i class="fas fa-calendar"></i>
              </span>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-8 col-md-8">
        <div class="form-group">
          <%= f.label :embedded_link %>
          <%= f.text_area :embedded_link, rows: 3, placeholder: t(".embed_placeholder"), class: "form-control" %>
          <small class="form-text text-muted mt-2"><%= t ".embed_tips_html" %></small>
        </div>
        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, class: "d-none" do %>
          <% end %>
          <div class="campaign-content">
            <div id="content-editor" class="form-control">
              <%= @campaign.content %>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
          <%= f.submit t(".save_campaign"), class: "btn btn-primary" %>
          <%= link_to t("global.cancel"), root_path, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</section>
