<section id="introduce" class="py-5 bg-primary-light">
  <div class="container">
    <div class="top-introduce py-5">
      <div class="row">
        <div class="col-md-5 order-2 order-md-1 d-flex align-items-center">
          <article class="introduce-box">
            <h2 class="font-weight-bold"><%= t "static_pages.home.intro_title" %></h2>
            <p class="my-3 text-secondary"><%= t "static_pages.home.intro_desc" %></p>
            <div class="d-flex justify-content-between">
              <div class="count-box">
                <h4 class="text-primary font-weight-semibold">300+</h4>
                <div class="text-secondary"><%= t "global.campaign" %></div>
              </div>
              <div class="count-box px-3">
                <h4 class="text-primary font-weight-semibold">6,000 +</h4>
                <div class="text-secondary"><%= t "static_pages.home.participants" %></div>
              </div>
              <div class="count-box">
                <h4 class="text-primary font-weight-semibold">5,5 <%= t "global.billions" %></h4>
                <div class="text-secondary"><%= t "static_pages.home.money_raised" %></div>
              </div>
            </div>
            <a href="https://kindmate.net/about" class="btn btn-static-page btn-primary mt-4"><%= t "global.see_more" %></a>
          </article>
        </div>
        <div class="col-md-6 offset-sm-1 order-1 order-md-2 ">
          <%= image_tag "svg/donation.svg", class: "my-3", width: "100%" %>
        </div>
      </div>
    </div>

    <div class="middle-introduce py-5"></div>

    <div class="bottom-introduce mt-4 row">
      <div class="text-center py-2 col-md-8 offset-md-2">
        <h2 class="mb-5 font-weight-bold"><%= t "static_pages.home.intro_bonus" %></h2>
        <div class="row">
          <div class="col-sm-6">
            <div class="my-2">
              <%= image_tag "svg/helping.svg", class: "mb-4" %>
              <h4 class="my-2 font-weight-semibold"><%= t "static_pages.home.want_donated_title" %></h4>
              <p class="my-2"><%= t "static_pages.home.want_donated_desc" %></p>
              <%= link_to t("static_pages.home.create_campaign"), "#", class: "btn btn-static-page btn-primary mt-3" %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="my-2">
              <%= image_tag "svg/love.svg", class: "mb-4" %>
              <h4 class="my-2 font-weight-semibold"><%= t "static_pages.home.want_donate_title" %></h4>
              <p class="my-2"><%= t "static_pages.home.want_donate_desc" %></p>
              <%= link_to t("global.campaigns"), "#", class: "btn btn-static-page btn-danger mt-3" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
