<% provide :title, t(".log_in") %>
<section class="py-2">
  <div class="container">
    <div class="top-introduce py-2">
      <div class="row align-items-center">
        <div class="col-md-6">
          <div class="row">
            <div class="col-12 mb-3">
              <div class="card card-shadow">
                <div class="card-body p-4">
                  <h3 class="mb-3 font-weight-bold"><%= t ".log_in" %></h3>
                  <%= form_for :user, url: login_path do |f| %>
                    <div class="form-group">
                      <%= f.label :email, t("form.user.email") %>
                      <%= f.email_field :email, class: "form-control" %>
                    </div>
                    <div class="form-group">
                      <%= f.label :password, t("form.user.password") %>
                      <%= f.password_field :password, class: "form-control" %>
                    </div>
                    <div class="form-group form-check">
                      <%= f.check_box :remember_me, class: "form-check-input" %>
                      <%= f.label :remember_me, t("form.user.remember_me"), class: "form-check-label" do %>
                        <%= t ".remember_me" %>
                      <% end %>
                    </div>
                    <%= f.submit t(".log_in"), class: "btn btn-block btn-primary mt-3" %>
                  <% end %>
                  <div class="d-flex justify-content-between align-items-center mt-3">
                    <%= link_to t(".forget_pass?"), password_reset_path, class: "text-secondary" %>
                    <p class="text-right mt-3"><%= t ".new_user?" %> <%= link_to t(".sign_up_now!"), signup_path, class: "text-primary" %></p>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-12">
              <div class="card card-shadow">
                <div class="card-body p-4">
                  <h6 class="mb-3 font-weight-semibold"><%= t ".log_in_with" %></h6>
                  <div class="row">
                    <div class="col-md-4 mb-3">
                      <%= link_to user_facebook_omniauth_authorize_path, class: "btn btn-block btn-facebook" do %>
                        <i class="fab fa-facebook-f"></i>
                        <span class="ml-2">
                          <%= Settings.oauth_kinds.facebook %>
                        </span>
                      <% end %>
                    </div>
                    <div class="col-md-4 mb-3">
                      <%= link_to user_google_oauth2_omniauth_authorize_path, class: "btn btn-block btn-google" do %>
                        <i class="fab fa-google"></i>
                        <span class="ml-2">
                          <%= Settings.oauth_kinds.google %>
                        </span>
                      <% end %>
                    </div>
                    <div class="col-md-4 mb-3">
                      <%= link_to user_github_omniauth_authorize_path, class: "btn btn-block btn-github" do %>
                        <i class="fab fa-github"></i>
                        <span class="ml-2">
                          <%= Settings.oauth_kinds.github %>
                        </span>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <%= image_tag "svg/donation.svg", class: "my-3", width: "100%" %>
        </div>
      </div>
    </div>
  </div>
</section>
