<header class="navbar navbar-expand-lg bg-white navbar-kindmate fixed-top">
  <div class="container">
    <%= link_to root_url, class: "navbar-brand kindmate-logo" do %>
      <%= image_tag "logo.svg" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav navbar-nav--right">
        <li class="nav-item">
          <%= link_to t("_header.campaigns"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t("_header.about_us"), about_path, class: "nav-link" %>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%= link_to t("_header.create_account"), "#", class: "btn btn-outline-primary mr-3" %>
        </li>
        <li class="nav-item">
          <%= link_to t("_header.login"), "#", class: "btn btn-primary" %>
        </li>
      </ul>
    </div>
  </div>
</header>
