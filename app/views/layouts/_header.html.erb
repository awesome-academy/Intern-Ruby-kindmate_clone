<header class="navbar navbar-expand-lg bg-white navbar-kindmate fixed-top">
  <div class="container">
    <%= link_to root_url, class: "navbar-brand kindmate-logo" do %>
      <%= image_tag "logo.svg" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav navbar-nav--left">
        <li class="nav-item">
          <%= link_to t("global.campaigns"), "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to t("_header.about_us"), about_path, class: "nav-link" %>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <% if logged_in? %>
          <li class="nav-item dropdown">
            <%= link_to "#", id: "navbarDropdown", class: "nav-link dropdown-toggle nav-user-info", "data-toggle": "dropdown",
                        role: "button", "aria-haspopup": "true", "aria-expanded": "false" do %>
              <%= gravatar_for current_user %>
              <span class="font-weight-semibold"><%= current_user.name %></span>
            <% end %>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <%= link_to t("_header.profile"), current_user, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to t("_header.logout"), logout_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to t("_header.create_account"), signup_path, class: "btn btn-outline-primary mr-3" %>
          </li>
          <li class="nav-item">
            <%= link_to t("_header.login"), login_path, class: "btn btn-primary" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
