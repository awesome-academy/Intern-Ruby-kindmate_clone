<div class="row list-campaigns">
  <% if items.any? %>
    <%= render items %>
  <% else %>
    <div class="w-100 d-flex flex-column align-items-center">
      <%= image_tag "svg/no_data.svg", class: "no-data-image mb-3" %>
      <div class="font-weight-medium text-muted text-center w-100">
        <%= t "global.no_campaigns" %>
        <%= link_to t("campaigns.create_now"), new_campaign_path, class: "text-primary" %>
      </div>
    </div>
  <% end %>
</div>
